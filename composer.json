{
	"name": "andykillen/wordpress-deployment",
	"description": "Deploy Wordpress via composer with extra tools to make it easuer.",
	"keywords": [
		"wordpress",
		"cms",
		"composer",
		"deployment",
		"htaccess",
		"robots.txt"
	],
	"require": {
		"composer/composer": "*",
        "composer/installers": "^2.0",
		"johnpbloch/wordpress": "*",
		"wpackagist-plugin/akismet":"*",
		"wpackagist-theme/twentytwenty":"*",
		"wpackagist-plugin/mailgun":"*",
		"wpackagist-plugin/wordpress-seo":"*",
		"wpackagist-plugin/woocommerce": "*",
		"cweagans/composer-patches": "^1.7"
	},
	"extra": {
		"composer-exit-on-patch-failure": true,
		"patches-file": "composer.patches.json",
		"enable-patching": true,
		"installer-paths": {
			"public_html/wp-content/plugins/{$name}/": [
				"type:wordpress-plugin"
			],
			"public_html/wp-content/themes/{$name}/": [
				"type:wordpress-theme"
			]
		},
		"wordpress-install-dir": "public_html",
		"wordpress-type" : "single",
		"server-type" : "apache"
	},
	"repositories": {
		"wpackagist":  {
			"type": "composer",
			"url": "https://wpackagist.org",
			"only": [
					"wpackagist-plugin/*",
					"wpackagist-theme/*"
				]
		}
	},
	"autoload": {
        "classmap": [
            "scripts/Composer/WordPress.php"
        ]
	},
	"scripts": {
        "post-package-install": [
            "Deployments\\Composer\\WordPress::postPackageInstall"
        ],
        "post-package-update": [
            "Deployments\\Composer\\WordPress::postPackageUpdate"
        ]
    }

}
